h1 { font-size: 26px; }
button { outline: none; }
.btn:focus { outline: none !important; }
.navbar { border-radius: 0; }
img.gravatar { width: 33px; height: 33px; border-radius: 3px; }
.navbar .current-user img { margin : -5px 0; }
i { width: 16px; text-align: center; }
.center { text-align: center; }
.twitter-login { margin-bottom: 20px; }
.twitter-login img { margin-top: -3px; height: 17px; width: 21px; }
#countdown { font-size: 1em; font-weight: 300; }
#countdown .clock { font-size: 1.25em; }
#until-text { font-size: 1.25em; font-weight: 500; }
ul.users { list-style: none; margin: 0 auto 10px auto; float: none; }
ul.users li { text-align: left; padding: 5px 0;}
ul.users li img { position: relative; top: 4px; float: left; margin-right: 5px; }
ul.users li .user-name { text-indent: 2px; font-weight: bold; }
ul.users li .user-location { color: #888; }
.main-wrapper { padding-bottom: 20px; }
/*.content.narrow { width: 600px; margin: 0 auto;}*/
.center .content p, .content.left { text-align: left; }
textarea#content_body { width: 99%; height: 500px; border: 0; box-shadow: none; resize: none; outline: none; }
textarea#content_body[disabled] { background-color: #fff; cursor: text; }
textarea#comment_body { width: 100%; height: 5em; border-color: #ccc; }
.redactor_editor { overflow-y: scroll;}
#save-content.white-text { color: #fff; }
#counter { z-index: 100; float: right; position: relative; top: 5px; right: 10px; }
#counter.over { color: #dd0000;}
ul.all_content { list-style: none; padding-left: 0; margin-top: 30px; }
ul.all_content li { margin-bottom: 25px; }
input#content_title { font-size: 1.5em; font-weight: bold; line-height: 1em; }
.content-body.no-edit { height: 500px; overflow-y: scroll; border: 1px solid #ccc; border-radius: 5px; padding: 20px 15px 25px 15px; }
.approved-buttons { margin-bottom: 5px; }
pre { tab-size: 2;}
@font-face{font-family:'Glyphicons Halflings';src:url(<%= asset_path 'glyphicons-halflings-regular.eot' %>);src:url(<%= asset_path 'glyphicons-halflings-regular.eot?#iefix' %>) format('embedded-opentype'),url(<%= asset_path 'glyphicons-halflings-regular.woff' %>) format('woff'),url(<%= asset_path 'glyphicons-halflings-regular.ttf' %>) format('truetype'),url(<%= asset_path 'glyphicons-halflings-regular.svg#glyphicons-halflingsregular' %>) format('svg')}
@media (min-width: 768px) {
	#countdown { font-size: 1.25em; }
	#countdown .clock, #until-text { font-size: 1.5em; }
	.content.narrow { width: 600px; margin: 0 auto;}
	h1 { font-size: 36px; }
}