.csw-home-background { position: fixed; top: 0; left: 0; height: 100%; width: 100%; background: url(<%= asset_path 'reindeer-sled-vintage.jpg' %>) no-repeat 0 0; background-size: cover; z-index: -1; }
body.csw-home .csw-content-header { position: fixed; top: 0; background: rgba(243,243,244,0); border: 0;}
.csw-home-hero { position: relative; height: 100vh; padding: 20vh 0 3rem 0; text-align: center; color: #fff; }
.csw-home-hero h1 { font-size: 4rem; margin: 1rem 0; background-color: rgba(200,0,0,0.4); display: inline-block;}
.csw-home-hero h2 { background-color: rgba(52,144,52,0.4); display: inline-block; font-style: italic; font-size: 3rem; margin:0; }
.csw-home-hero p.csw-sub-assist { background-color: rgba(0,0,0,0.4); display: inline-block; font-size: 1.5rem; margin-top: 4rem; }
.csw-home-hero .csw-button { font-size: 1rem; padding: 0.75rem 2rem; margin: 3rem 0; }
.csw-home-hero .csw-home-more { position: absolute; bottom: 0; width: 100%; text-align: center; }
.csw-home-hero .csw-home-more .csw-icon-chevron-down { font-size: 3rem; line-height: 1.75rem; }
.csw-home-section { margin-bottom: 3rem; }
.csw-home-section > .row { background-color: #fff;}
.csw-home-section-green { background-color: rgba(52,144,52,0.3); }
.csw-home-section-red { background-color: rgba(200,0,0,0.3); }
.csw-home-content { padding-top: 2rem; padding-bottom: 3rem; }
.csw-item-row .user-name { font-weight: bold; }
.user.playing .playing-status { color: #5cb85c; }
.user.playing .csw-avatar { border-color: #5cb85c;}
.user.waiting .playing-status { color: #5bc0de; }
.user.waiting .csw-avatar { border-color: #5bc0de; }
.user.unavailable .playing-status { color: #f0ad4e; }
.user.unavailable .csw-avatar { border-color: #f0ad4e; }
.user.incomplete .playing-status { color: #999; }
.user.incomplete .csw-avatar { border-color: #999; }
.user-summaries { padding-bottom: 2rem; }
.user-summaries .user-summary { color: #f3f3f4; font-weight: 200; display: block; overflow: hidden; padding: 10px; margin-bottom: 5px}
.user-summaries .user-summary.total, .label.total { color: #888; background-color: #fff; border: 1px solid #ccc; }
.user-summaries .user-summary.total { padding: 10px 9px 8px 10px; }
.user-summaries .user-summary.playing { background-color: #5cb85c; }
.user-summaries .user-summary.waiting_list { background-color: #5bc0de; }
.user-summaries .user-summary.unavailable { background-color: #f0ad4e; }
.user-summaries .user-count { font-size: 2.5em; display: block; padding-bottom: 5px; line-height: 1em; }
.user-summaries .user-playing-status { font-size: 1.25em; line-height: 1em; }
.user-summaries .user-playing-status .csw-icon { font-size: 0.9em; top: 0; }
.user-summaries a:hover { text-decoration: none; }