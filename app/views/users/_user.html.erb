<div class="small-12 medium-6 large-4 columns csw-item-row csw-hover user">
	<%= gravatar_for(user) %>
	<div class="csw-item-row-content csw-indent">
		<div class="user-name"><%= user.name %></div>
		<div class="user-blog"><%= link_to host_only(user.blog), user.blog, target: "_blank" if user.blog %></div>
		<% unless user.location.blank? %>
			<div class="user-location"><i class="csw-icon csw-icon-map-marker"></i> <%= user.location %></div>
		<% end %>
	</div>
</div>