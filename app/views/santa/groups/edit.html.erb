<% title "Edit #{@group.name}" %>

<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<div class="content center">
				<h1><%= yield :heading %></h1>
			</div>
			<%= render "form", group: @group %>

			<h2>Elves</h2>
			<% @group.users.elf.each do |elf| %>
				<%= render "santa/users/elf", group: @group, elf: elf %>
			<% end %>
			<%= link_to "Add elf", assign_group_users_path(group_id: @group), class: "btn btn-default" %>
		</div>
	</div>
</div>