<% title "List of groups" %>

<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<div class="content">
				<h1><%= yield :heading %></h1>
				<%= link_to "New group", new_group_path, class: "btn btn-default" %>
			</div>
		</div>
	</div>
	<div class="row">
    <% @groups.each do |group| %>
    	<%= render "group", group: group %>
    <% end %>
  </div>
</div>