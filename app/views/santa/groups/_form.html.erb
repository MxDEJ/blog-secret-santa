			<%= form_for group, class: "col-sm-12 col-lg-4" do |f| %>
				<fieldset>
					<div class="form-group">
			  		<%= f.label :name %>
			  		<%= f.text_field :name, class: "form-control" %>
			  	</div>

			  	<div class="form-group">
			  		<%= f.label :subdomain %>
			    	<%= f.text_field :subdomain, class: "form-control" %>
			    </div>

			  	<div class="form-group">
						<%= f.submit "Save", class: "btn btn-success" %>
					</div>
				</fieldset>
			<% end %>