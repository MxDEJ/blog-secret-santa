<% title "New group" %>

<div class="row">
	<div class="small-12 columns">
		<h1><%= yield :heading %></h1>
		<%= form_for [:santa, @message] do |f| %>
			<fieldset>
				<div class="csw-form-group">
		  		<%= f.label :to, class: "csw-input-label" %>
		  		<%= f.text_field :to, class: "csw-form-input" %>
		  	</div>

		  	<div class="csw-form-group">
		  		<%= f.label :subject, class: "csw-input-label" %>
		  		<%= f.text_field :subject, class: "csw-form-input" %>
		    </div>

		    <div class="csw-form-group">
		  		<%= f.label :template, class: "csw-input-label" %>
		  		<%= f.text_field :template, class: "csw-form-input" %>
		    </div>

		    <div class="csw-form-group">
		  		<%= f.label :body, class: "csw-input-label" %>
		  		<%= f.text_area :body, class: "csw-form-input", rows: 10 %>
		    </div>

		  	<div class="csw-form-group">
					<%= f.submit "Send", class: "csw-button" %>
				</div>
			</fieldset>
		<% end %>
	</div>
</div>
