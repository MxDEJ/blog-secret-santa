<% title @user.name.present? ? @user.name : "No name" %>

<div class="row">
	<div class="small-12 columns">
	<div class="csw-item-row user full <%= @user.playing_status(@user.group.status) if @user.group %>">
		<h2><%= yield :heading %> is <span class="playing-status"><%= @user.group ? @user.playing_status(@user.group.status).humanize : "Incomplete" %></span></h2>
		<%= gravatar_for(@user) %>
		<div class="csw-item-row-content csw-indent">
			<div class="user-email"><%= @user.email %></div>
			<div class="user-blog"><%= link_to @user.blog, @user.blog, target: "_blank" if @user.blog %></div>
			<% unless @user.location.blank? %>
				<div class="user-location"><span class="glyphicon glyphicon-map-marker"></span> <%= @user.location %></div>
			<% end %>
			<div class="csw-meta">
				Joined <%= time_ago_in_words(@user.created_at) %> ago<br />
				Last updated <%= time_ago_in_words(@user.updated_at) %> ago
			</div>
		</div>
	</div>
</div>