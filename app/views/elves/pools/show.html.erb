<% title "#{@pool.name} Elf Area" %>

<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<div class="content center">
				<h1><%= yield :heading %></h1>
			</div>
			<ul class="users col-sm-4">
	      <% @users.each do |user| %>
	      	<%= render "elves/users/user", user: user, display_email: true %>
	      	<% if Rails.env.development? %>
	      		<p>Giver: <%= user.giver ? user.giver.name : "none" %><br />
	      		Receiver: <%= user.receiver ? user.receiver.name : "none" %></p>
	      	<% end %>
	      <% end %>
      </ul>
		</div>
	</div>
</div>