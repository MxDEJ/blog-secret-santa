<div class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle pull-right" data-toggle="collapse" data-target="#main-navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Blog Secret Santa</a>
    </div>
      <div id="main-navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav pull-right">
          <li><%= link_to "Santa's tips", tips_path %></li>
          <li><%= link_to "How it works", about_path %></li>
          <% if signed_in? %>
            <% if current_user.email %>
              <li class="current-user">
                <%= link_to edit_user_path(current_user) do %>
                  <%= gravatar_for(current_user) %>
                <% end %>
              </li>
            <% end %>
            <li>
              <%= link_to "Logout", logout_path %>
            </li>
          <% end %>
        </ul>
      </div>
  </div>
