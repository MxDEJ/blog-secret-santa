<% title "Log in" %>

<div class="row">
	<div class="medium-6 medium-centered columns csw-well">
		<div class="row csw-social-button-group">
			<div class="medium-6 columns">
				<%= link_to omniauth_authorize_path(resource_name, "twitter"), class: "csw-button csw-social-button csw-social-button-twitter" do %>
			    <i class="csw-icon csw-icon-twitter"></i> Log in with Twitter
			  <% end %>
			</div>
			<div class="medium-6 columns">
			  <%= link_to omniauth_authorize_path(resource_name, "facebook"), class: "csw-button csw-social-button csw-social-button-facebook" do %>
			    <i class="csw-icon csw-icon-facebook"></i> Log in with Facebook
			  <% end %>
			</div>
		</div>
		<div class="csw-login-option-text"><p>or log in with</p></div>
		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<fieldset>
				<div class="csw-form-group">
					<%= f.label :email, class: "csw-input-label" %>
					<%= f.email_field :email, autofocus: true, class: "csw-form-input" %>
				</div>
				<div class="csw-form-group">
					<%= f.label :password, class: "csw-input-label" %>
					<%= f.password_field :password, autocomplete: "off", class: "csw-form-input" %>
				</div>
				<div class="csw-form-group">
					<%= f.check_box :remember_me %> <%= f.label :remember_me %>
				</div>
				<div class="csw-form-group">
					<%= submit_tag "Log in", class: "csw-button" %>
				</div>
				<div class="csw-form-group">
					<%= link_to "Forgot your password?", new_password_path(resource_name)%>
				</div>
			</fieldset>
		<% end %>
	</div>
</div>
<div class="row">
	<div class="medium-6 medium-centered columns csw-well">
		Don't have an account? <%= link_to "Sign up", signup_path %>
	</div>
</div>
